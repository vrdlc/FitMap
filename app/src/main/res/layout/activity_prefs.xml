<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/alone"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mikeschen.www.fitnessapp.simpleActivities.PrefsActivity">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="top|center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/gridLayout">

        <TextView
            android:layout_width="@dimen/edittext_width"
            android:layout_height="@dimen/edittext_height"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Home Address"
            android:id="@+id/homeTextView"
            android:alpha="0.7"
            android:elevation="@dimen/activity_elevation"
            android:layout_marginRight="@dimen/activity_medium_padding"
            android:textColor="@color/colorWhite"
            android:background="@color/colorBlack"
            android:gravity="center" />

        <EditText
            android:layout_width="@dimen/edittext_width"
            android:layout_height="@dimen/edittext_address"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:padding="@dimen/activity_small_padding"
            android:layout_marginRight="@dimen/activity_medium_padding"
            android:background="@color/colorWhite"
            android:id="@+id/homeEditText"
            android:hint="Home Address" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="@dimen/edittext_width"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_marginRight="@dimen/activity_medium_padding"
            android:layout_marginBottom="@dimen/activity_medium_padding"
            android:elevation="@dimen/activity_elevation"
            android:text="Set"
            android:padding="@dimen/activity_small_padding"
            android:textSize="@dimen/text_tiny"
            android:textColor="@color/colorWhite"
            android:id="@+id/homePrefsButton"
            android:drawableRight="@drawable/ic_home_white_24dp"
            android:background="@drawable/buttonred2"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="@dimen/edittext_width"
            android:layout_height="@dimen/edittext_height"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_columnSpan="2"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Work Address"
            android:id="@+id/workTextView"
            android:alpha="0.7"
            android:elevation="@dimen/activity_elevation"
            android:textColor="@color/colorWhite"
            android:background="@color/colorBlack"
            android:gravity="center" />

        <EditText
            android:layout_width="@dimen/edittext_width"
            android:layout_height="@dimen/edittext_address"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_columnSpan="2"
            android:background="@color/colorWhite"
            android:hint="Work Address"
            android:padding="@dimen/activity_small_padding"
            android:id="@+id/workEditText" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="@dimen/edittext_width"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_columnSpan="2"
            android:elevation="@dimen/activity_elevation"
            android:layout_marginBottom="@dimen/activity_small_margin"
            android:text="Set"
            android:drawableRight="@drawable/ic_work_white_24dp"
            android:padding="@dimen/activity_small_padding"
            android:textSize="@dimen/text_tiny"
            android:textColor="@color/colorWhite"
            android:id="@+id/workPrefsButton"
            android:background="@drawable/buttonred"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="@dimen/edittext_width"
            android:layout_height="@dimen/edittext_height"
            android:layout_marginRight="@dimen/activity_medium_padding"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Your Height"
            android:id="@+id/heightFeetTextView"
            android:alpha="0.7"
            android:elevation="@dimen/activity_elevation"
            android:textColor="@color/colorWhite"
            android:background="@color/colorBlack"
            android:gravity="center" />

        <EditText
            android:layout_width="64dp"
            android:layout_height="@dimen/edittext_height"
            android:layout_row="4"
            android:layout_column="0"
            android:background="@color/colorWhite"
            android:layout_marginRight="1dp"
            android:padding="@dimen/activity_small_padding"
            android:hint="Feet"
            android:id="@+id/heightFeetEditText"
            android:inputType="number"
            android:layout_gravity="center" />

        <EditText
            android:layout_width="65dp"
            android:layout_height="@dimen/edittext_height"
            android:layout_row="4"
            android:layout_column="1"
            android:background="@color/colorWhite"
            android:padding="@dimen/activity_small_padding"
            android:hint="Inches"
            android:id="@+id/heightInchesEditText"
            android:inputType="number"
            android:layout_gravity="center_horizontal" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="@dimen/edittext_width"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_medium_padding"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:elevation="@dimen/activity_elevation"
            android:text="Set"
            android:drawableRight="@drawable/ic_height_24dp"
            android:padding="@dimen/activity_small_padding"
            android:textSize="@dimen/text_tiny"
            android:textColor="@color/colorWhite"
            android:id="@+id/heightPrefsButton"
            android:background="@drawable/buttonyellow"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="@dimen/edittext_width"
            android:layout_height="@dimen/edittext_height"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_columnSpan="2"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Your Weight"
            android:id="@+id/weightTextView"
            android:alpha="0.7"
            android:elevation="@dimen/activity_elevation"
            android:textColor="@color/colorWhite"
            android:background="@color/colorBlack"
            android:gravity="center" />

        <EditText
            android:layout_width="@dimen/edittext_width"
            android:layout_height="@dimen/edittext_height"
            android:padding="@dimen/activity_small_padding"
            android:layout_columnSpan="2"
            android:layout_row="4"
            android:layout_column="3"
            android:background="@color/colorWhite"
            android:hint="Enter Weight"
            android:id="@+id/weightEditText"
            android:inputType="number"
            android:layout_gravity="center_horizontal" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="@dimen/edittext_width"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:layout_row="5"
            android:layout_column="3"
            android:elevation="@dimen/activity_elevation"
            android:text="Set"
            android:drawableRight="@drawable/ic_pregnant_woman_white_24dp"
            android:padding="@dimen/activity_small_padding"
            android:textSize="@dimen/text_tiny"
            android:textColor="@color/colorWhite"
            android:id="@+id/weightPrefsButton"
            android:background="@drawable/button"
            android:layout_gravity="center_horizontal" />

    </GridLayout>
</RelativeLayout>
